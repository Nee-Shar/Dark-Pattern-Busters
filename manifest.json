{
  "manifest_version": 2,
  "name": "Dark Pattern Detector",
  "version": "1.0",
  "description": "Detect dark patterns on web pages.",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "web_accessible_resources": ["test.html"],
  "icons": {
    "48": "icon.png"
  }
}
